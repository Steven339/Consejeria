<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.opciondegrado.consejeria.consejeria.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="298dp"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_correo"
        android:hint="@string/correo_electr_nico"
        android:inputType="textPersonName"
        android:textSize="16sp" android:drawableStart="@drawable/ic_action_correo" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/correo"
        android:layout_alignStart="@+id/correo"
        android:layout_below="@+id/correo"
        android:layout_marginTop="48dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="@string/contrase_a"
        android:inputType="textPassword"
        android:textSize="16sp" android:drawableStart="@drawable/ic_action_password" />

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        app:cardBackgroundColor="#ffcd07"
        android:layout_below="@+id/pass"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:layout_marginTop="82dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
